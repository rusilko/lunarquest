<% title "Words", false %>
<%= form_tag words_path, class: "form-search", method: 'get' do %>
<legend>Search for words</legend>
  <%= content_tag :div, class: "input-append" do %>
    <%= search_field_tag :query, params[:query], class: "span3 search-query" %>
    <%# select_tag :language, options_from_collection_for_select(@languages, "id", "name"), prompt: "Select language" %>
    <%= submit_tag "Search", name: nil, class: "btn btn-info" %>
  <% end -%>
<% end %>

<% unless @words.empty? %>
  <table class="table table-striped table-bordered">
    <tr>
      <th>#</th>
      <th>Word</th>
      <th>Language</th>
      <th>Actions</th>
    </tr>
    <% @words.each_with_index do |word,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to word.value, word_path(word) %></td>
        <td><%= word.language.name %></td>
        <td>
        <%= link_to "Edit", edit_word_path(word), class: 'btn btn-mini btn-info' %>
        <%= link_to "Destroy", word, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </table>
<% end -%>

<%= form_tag new_word_path, class: "form-search", method: 'get' do %>
<legend>Create new word</legend>
  <%= content_tag :div, class: "input-append" do %>
    <%= search_field_tag :w, params[:w], class: "span3 search-query" %>
    <%= submit_tag "+ New Word", name: nil, class: "btn btn-success" %>
  <% end -%>
<% end %>





